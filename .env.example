# Environment Configuration for HNC
# Copy this to .env and update with your values

# === Core Configuration ===

# Verbose logging (affects all operations)
HNC_VERBOSE=false

# === Validation Configuration ===

# HHFab CLI tool path (required for fabric validation)
HHFAB=/usr/local/bin/hhfab

# Feature flags for validation systems
FEATURE_HHFAB=false
FEATURE_K8S=false
FEATURE_GIT=false

# === Integration Configuration ===

# GitHub Integration (optional - for Git-based features)
GITHUB_TOKEN=your_github_token_here
GIT_REMOTE=origin

# Kubernetes Integration (optional - for K8s validation and deployment)
KUBECONFIG=~/.kube/config

# === CI/CD Configuration ===

# Enable validation in CI (set via GitHub repository variables)
# ENABLE_HHFAB_VALIDATION=true
# ENABLE_K8S_VALIDATION=true
# ENABLE_INTEGRATION_TESTS=true

# === Development Configuration ===

# Test data paths (for integration tests)
TEST_FGD_FILE=test-output/test-fabric.yaml
TEST_K8S_NAMESPACE=hnc-test

# Performance tuning
PLAYWRIGHT_MAX_WORKERS=1
VITEST_MAX_WORKERS=4